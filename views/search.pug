extends layout

block content
    h1 Welcome to CIS550 Datalake
    h3 Anthony Janocko, Karan Hiremath, Shuai Shao, Zimyang
    hr
    h2 Results
    h4= query
    each val, index in data
        div(id="mynetwork_" + index, style="width: 600px; height: 400px; border: 1px solid lightgray;")
        hr
        script.
            var container = document.getElementById('mynetwork_' + index);
            var options = {};

            var nodes = new vis.DataSet(!{JSON.stringify(val.nodes)});
            var edges = new vis.DataSet(!{JSON.stringify(val.edges)});

            var data = {nodes: nodes, edges: edges};

            var network = new vis.Network(container, data, options);